            plt.title("Escape velocity Analysis");
            plt.ylabel("Escape velocity(km/s)");
            plt.grid();
            plt.show();
            
            #pie chart
            plt.pie(df["Escape velocity(km/s)"], labels=df["Name"],autopct='%1.1f%%');
            plt.title("Escape velocity Analysis");
            plt.show();     
            
        case 6:
            
            #rotation period
            #straight line graph
            plt.plot(df["Name"],df["Rotation Period(hours)"]);
            plt.title("Rotation Period Analysis");
            plt.ylabel("Rotation Period(hours)");

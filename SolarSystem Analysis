            plt.scatter(df["Name"],df["Mean Temperature(C)"], color = "red");
            plt.title("Mean Temperature Analysis");
            plt.ylabel("Mean Temperature(C)");
            plt.grid();
            plt.show();
            
          #no pie chart as we can't plot negative values
            
        case 8:
            
            #moons
             #straight line graph
            plt.plot(df["Name"],df["Number of moons"]);
            plt.title("Moons Analysis");
            plt.ylabel("Number of moons");
            plt.show();
            
            #bar graph
            plt.bar(df["Name"],df["Number of moons"], color = "slateblue");
            plt.title("Moons Analysis");
            plt.ylabel("Number of moons");
            plt.show();
            

        plt.show();
     return 0;

def planets():
    
    print("")
    print("Welcome to the planet section of this analysis. Here you will be provided with detailed insights of different planets")
    print(" ")
    print("A planet is a large, rounded astronomical body that is neither a star nor its remnant. The best available theory of planet formation is the nebular hypothesis, which posits that an interstellar cloud collapses out of a nebula to create a young protostar orbited by a protoplanetary disk. Planets grow in this disk by the gradual accumulation of material driven by gravity, a process called accretion. The Solar System has at least eight planets: the terrestrial planets Mercury, Venus, Earth, and Mars, and the giant planets Jupiter, Saturn, Uranus, and Neptune.");
    print(" ")
    
    print("Type 1 for exploring MERCURY")
    print("Type 2 for exploring VENUS")
    print("Type 3 for exploring EARTH")
    print("Type 4 for exploring MARS")
    print("Type 5 for exploring JUPITER")
    print("Type 6 for exploring SATURN")
    print("Type 7 for exploring URANUS")
    print("Type 8 for exploring NEPTUNE")
    
    choice3 = int(input())
    
    match choice3:
         
         case 1:
             mercury()
             
         case 2: 
             venus()
          
         case 3:
             earth()
             
         case 4:
             mars()
             
         case 5:
             jupiter()
             
         case 6:
             saturn()
             
         case 7:
             uranus();
             
         case 8:
             neptune();
             
         case _:
             print("INVALID INPUT!!!")                            
    
    return 0;

def solarSystem():
    print("Here's everything you need to know about your Solar System");
    print(" ")
    
    print(df);
    print(" ")
    
    print("Tell me which property are you interested in ???");
    print(" ")
    print("Type 1 for Radius ")
    print("Type 2 for Mass")
    print("Type 3 for Density")
    print("Type 4 for Gravity ")
    print("Type 5 for Escape velocity")
    print("Type 6 for Rotation Period")
    print("Type 7 for Mean Temperature")
    print("Type 8 for Number of moons")
    print(" ")
    choice1 = int(input());
    
    match choice1:
        
        case 1:
            
            #radius
            #straight line graph
            plt.plot(df["Name"],df["Radius(km)"]);
            plt.title("Radius Analysis");
            plt.ylabel("Radius(km)");
            plt.show();
            
            #bar graph
            plt.bar(df["Name"],df["Radius(km)"], color = "slateblue");
            plt.title("Radius Analysis");
            plt.ylabel("Radius(km)");
            plt.show();
            
            #scatter graph
            plt.scatter(df["Name"],df["Radius(km)"], color = "red");
            plt.title("Radius Analysis");
            plt.ylabel("Radius(km)");
            plt.grid();
            plt.show();
            
            #pie chart
            plt.pie(df["Radius(km)"], labels=df["Name"],autopct='%1.1f%%');
            plt.title("Radius Analysis");
            plt.show();
        
        case 2:
           
            #mass
            #straight line graph
            plt.plot(df["Name"],df["Mass( 10^24kg)"]);
            plt.title("Mass Analysis");
            plt.ylabel("Mass(10^24kg)");
            plt.show();
            
            #bar graph
            plt.bar(df["Name"],df["Mass( 10^24kg)"], color = "slateblue");
            plt.title("Mass Analysis");
            plt.ylabel("Mass(10^24 kg)");
            plt.show();
            
            #scatter graph
            plt.scatter(df["Name"],df["Mass( 10^24kg)"], color = "red");
            plt.title("Mass Analysis");
            plt.ylabel("Mass(10^24 kg)");
            plt.grid();
            plt.show();
            
            #pie chart
            plt.pie(df["Mass( 10^24kg)"], labels=df["Name"]);
            plt.title("Mass Analysis");
            plt.show();  
            
        case 3:
             
             #density
              #straight line graph
            plt.plot(df["Name"],df["Density(kg/m^3)"]);
            plt.title("Density Analysis");
            plt.ylabel("Density(kg/m^3)");
            plt.show();
            
            #bar graph
            plt.bar(df["Name"],df["Density(kg/m^3)"], color = "slateblue");
            plt.title("Density Analysis");
            plt.ylabel("Density(kg/m^3)");
            plt.show();
            
            #scatter graph
            plt.scatter(df["Name"],df["Density(kg/m^3)"], color = "red");
            plt.title("Density Analysis");
            plt.ylabel("Density(kg/m^3)");
            plt.grid();
            plt.show();
            
            #pie chart
            plt.pie(df["Density(kg/m^3)"], labels=df["Name"],autopct='%1.1f%%');
            plt.title("Density Analysis");
            plt.show();     
            
        case 4:
            
            #gravity
             #straight line graph
            plt.plot(df["Name"],df["Gravity(m/s^2)"]);
            plt.title("Gravity Analysis");
            plt.ylabel("Gravity(m/s^2)");
            plt.show();
            
            #bar graph
            plt.bar(df["Name"],df["Gravity(m/s^2)"], color = "slateblue");
            plt.title("Gravity Analysis");
            plt.ylabel("Gravity(m/s^2)");
            plt.show();
            
            #scatter graph
            plt.scatter(df["Name"],df["Gravity(m/s^2)"], color = "red");
            plt.title("Gravity Analysis");
            plt.ylabel("Gravity(m/s^2)");
            plt.grid();
            plt.show();
            
            #pie chart
            plt.pie(df["Gravity(m/s^2)"], labels=df["Name"],autopct='%1.1f%%');
            plt.title("Gravity Analysis");
            plt.show();     
            
        case 5: 
            
            #escape velocity
             #straight line graph
